# Change to a directory given a full or partial name
# You don't have to wrap directory names in quotes either
# WIP
chd() {
  if [ -n "$@" ]; then
    if [ -n "`ls *"$@"* 2>/dev/null`" ]; then
      cd "$@"*
    else
      echo "-bash: chd: "$@": No directory could be extrapolated from partial name"
    fi
  fi
}

source ~/.bashrc

